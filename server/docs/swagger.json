                },
                "password": {
                    "type": "string"
                }
            }
        },
        "controllers.userSignUp": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "log_types.UserLogInfos": {
